{% extends 'base.html.twig' %}

{% block title %}Vos demandes de contact{% endblock %}

{% block body %}
<div class="container">
    <div class="text-center my-3 mt-5">
        <h1>Vos formulaires soumis</h1>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th class="col-md-3">Nom de famille</th>
            <th class="col-md-3">Pr√©nom</th>
            <th class="col-md-6">Question</th>
        </tr>
        </thead>
        <tbody>
        {% for completedForm in completedForms %}
            <tr>
                <td>{{ completedForm.contactDetail.lastname }}</td>
